{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"formatter": {
		"enabled": true,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"files": {
		"experimentalScannerIgnores": ["node_modules/**", "dist/**", "assets/**", "**.db.json", "**.db.json"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "none"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!dist"],
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "error"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["react", "react-dom", "react-*"],
							["@types/react", "@types/react-*"],
							[":PACKAGE:", "!@nutri-track/**"],
							":BLANK_LINE:",
							["@nutri-track/**"],
							":BLANK_LINE:",
							["@/**", "~/**", "!**/*.svg\\?react"],
							":BLANK_LINE:",
							["./**", "../**"],
							":BLANK_LINE:",
							["**/*.css", "**/*.scss", "**/*.less"],
							["**/*.svg", "**/*.svg\\?react", "**/*.png", "**/*.jpg", "**/*.jpeg", "**/*.gif"]
						]
					}
				}
			}
		}
	}
}
