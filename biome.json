{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"formatter": {
		"enabled": true,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": false
	},
	"assist": {
		"enabled": false
	}
}
