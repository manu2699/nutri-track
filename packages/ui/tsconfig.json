{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../../dist/packages/ui",
		"rootDir": "src",
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "../../dist/packages/ui/types",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
