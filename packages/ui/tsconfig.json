{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "dist/types",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
