{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"composite": false,
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/visualize/**/*", "**/*.test.*", "**/*.spec.*"]
}
